# Пользовательская кнопка
<CustButton@Button>:

    font_size: 32


# Определить идентификатор, чтобы я мог ссылаться на CalcGridLayout
# функции класса
# Отображение указывает на виджет ввода
<CalcGridLayout>:

    id: calculator

    display: entry

    rows: 6

    padding: 10

    spacing: 10







    # Где отображается ввод

    BoxLayout:

        TextInput:

            id: entry

            font_size: 32

            multiline: False



    # При нажатии кнопок обновите запись

    BoxLayout:

        spacing: 10

        CustButton:

            text: "A"

            on_press: entry.text += self.text

        CustButton:

            text: "B"

            on_press: entry.text += self.text

        CustButton:

            text: "C"

            on_press: entry.text += self.text

        CustButton:

            text: "+"

            on_press: entry.text += self.text



    BoxLayout:

        spacing: 10

        CustButton:

            text: "D"

            on_press: entry.text += self.text

        CustButton:

            text: "E"

            on_press: entry.text += self.text

        CustButton:

            text: "F"

            on_press: entry.text += self.text

        CustButton:

            text: "-"

            on_press: entry.text += self.text



    BoxLayout:

        spacing: 10

        CustButton:

            text: "True"

            on_press: entry.text += self.text

        CustButton:

            text: "("

            on_press: entry.text += self.text

        CustButton:

            text: ")"

            on_press: entry.text += self.text

        CustButton:

            text: "*"

            on_press: entry.text += self.text



    # При нажатии equals передать текст в записи

    # к функции вычисления

    BoxLayout:

        spacing: 10

        CustButton:

            text: "AC"

            on_press: entry.text = ""

        CustButton:

            text: "False"

            on_press: entry.text += self.text

        CustButton:

            text: "="

            on_press: entry.text += self.text

        CustButton:

            text: "\\"

            on_press: entry.text += self.text

    BoxLayout:

        CustButton:

            font_size: 20

            text: "=="

            on_press: calculator.calculate(entry.text)